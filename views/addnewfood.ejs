<html>
    <head>
        <title>
            add new food
        </title>
        <style>
            .heading{
                font-family: Grape Nuts;
                font-size: 35px;
                color: black;
                display: flex;
                justify-content: center;
                padding: 5px;
            }
            .formback
            {
                width: 80%;
                height: 85%;
                background-color: white;
                border-radius: 25px;
                padding: 10px;
            }
            .maincontainer
            {
                width: 100%;
                height: 100%;
                background-color: #ff9900;
                display: flex;
                justify-content: center;
                align-items: center;

            }
            

            .gap{
                display: flex;
                justify-content: space-around;
            }
            .row{
                display: flex;
                height: 12%;
                
            }

        </style>
        
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Grape+Nuts&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="/javascripts/project.js"></script>
    
    <script>
         $(document).ready(function(){
    $('select').formSelect();
  });
    </script>
    </head>
    <body>
        <div class="maincontainer">
            <div class="formback">

                <div class="heading">
                    <tr>
                        <td><img src="/images/Swiggy.png" alt="" width="30px"></td>
                        <td>Food Enquiry System</td>
                    </tr>
                </div>

                <form action="/food/addrecord" class="col s12" method="post" enctype="multipart/form-data">

                <div class="row">
                    <div class="col s6">
                        <div class="input-field">
                            <input id="foodlist" name="foodlist" type="text" class="validate">
                            <label for="foodlist">foodlist id</label>
                          </div>
                    </div>
                    <div class="input-field col s6">
                        <select name="category_name" id="categoryname">
                          <option value="" disabled selected>Choose your option</option>
                          
                        </select>
                        <label>Select Catagory name</label>
                      </div>  
                </div>

                <div class="row">
                    <div class="col s6">
                        <div class="input-field">
                            <input id="your_name" name="yourname" type="text" class="validate">
                            <label for="your_name">Your Name</label>
                          </div>
                    </div>
                    <div class="input-field col s6">
                        <select id="foodname" name="foodname">
                          <option value="" disabled selected>Choose your option</option>
                          
                        </select>
                        <label>Select food name</label>
                      </div>  
                </div>

                <div class="row">
                    <div class="col s6">
                        <div class="col s6 gap">
                            <p>
                                <label>
                                  <input name="group1" type="radio" checked value="Veg"/>
                                  <span>Veg</span>
                                </label>
                            </p>    
                        </div>
                        <div class="col s6">
                            <p>
                                <label>
                                  <input name="group1" type="radio" checked value="Non Veg"/>
                                  <span>Non veg</span>
                                </label>
                            </p>
                        </div>                          
                    </div>
                    <div class="col s6">
                        <div class="input-field">
                            <input id="ingredients" name="ingredients" type="text" class="validate">
                            <label for="ingredients">Enter ingredients</label>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s4">
                        <div class="input-field">
                            <input id="price" name="price" type="number" class="validate">
                            <label for="price">Enter price</label>
                          </div>
                    </div>
                    <div class="col s4">
                        <div class="input-field">
                            <input id="offerprice" name="offerprice" type="number" class="validate">
                            <label for="offerprice">Enter offer price</label>
                          </div>
                    </div>
                    <div class="input-field col s4">
                        <select id="status" name="status">
                          <option value="" disabled selected>Choose your option</option>
                          
                        </select>
                        <label>Status</label>
                      </div>
                </div>

                <div class="row">
                    <div class="col s12">
                        <div class="file-field input-field">
                            <div class="btn">
                              <span>File</span>
                              <input type="file" id="file" name="file" multiple>
                            </div>
                            <div class="file-path-wrapper">
                              <input class="file-path validate" type="text" placeholder="Upload one or more files">
                            </div>
                          </div>
                    </div>
                </div>

                <div class="row gap">
                    <div class="col s5 gap">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                          </button>                        
                    </div>
                    <div class="col s4 gap">
                        <div id="result">
                            <%=msg%>
                        </div>
                    </div>
                    <div class="col s4">
                        <button class="btn waves-effect waves-light" type="reset" name="action">Reset
                            <i class="material-icons right">delete</i>
                          </button>
                                
                    </div>
                </div>
            </form>
            </div>
        </div>
        
    </body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</html>