<html>
    <head>
        <title>
            show picture
        </title>
        <style>
            .heading{
                font-family: Grape Nuts;
                font-size: 35px;
                color: black;
                display: flex;
                justify-content: center;
                padding: 5px;
            }
            .formback
            {
                width: 50%;
                height: 60%;
                background-color: white;
                border-radius: 25px;
                padding: 10px;
            }
            .maincontainer
            {
                width: 100%;
                height: 100%;
                background-color: #ff9900;
                display: flex;
                justify-content: center;
                align-items: center;

            }
            

            .gap{
                display: flex;
                justify-content: space-around;
            }
            .row{
                display: flex;
                height: 12%;
                
            }

        </style>
        
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Grape+Nuts&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="/javascripts/project.js"></script>
    
    <script>
         $(document).ready(function(){
    $('select').formSelect();
  });
    </script>
    </head>
    <body>
        <div class="maincontainer">
            <div class="formback">
                <form action="/food/editpicture" class="col s12" method="post" enctype="multipart/form-data">
                <div class="heading">
                    <tr>
                        <td><img src="/images/Swiggy.png" alt="" width="30px"></td>
                        <td>Food Enquiry System</td>
                    </tr>
                </div>
                <input type="hidden" value="<%=foodlistid%>" name="foodlistid" id="">
                <input type="hidden" value="<%=pic%>" name="oldpic" id="">
                
                <h3 style="display: flex;justify-content: center;font-size: 20;"><%=foodname%></h3>
                
                <div class="col s12" style="display: flex;justify-content: center;">
                    <img src="/images/<%=pic%>" alt="pic" width="100px" >
                </div>

                <div class="row" style="padding-top: 25px;">
                    <div class="col s12">
                        <div class="file-field input-field">
                            <div class="btn">
                              <span>File</span>
                              <input type="file" required id="file" name="file" multiple>
                            </div>
                            <div class="file-path-wrapper">
                              <input class="file-path validate" type="text" placeholder="Upload one or more files">
                            </div>
                          </div>
                    </div>
                </div>

                <div class="col s12" style="padding-top:50px;display: flex;justify-content: center;">
                    <button class="btn waves-effect waves-light" type="submit" name="btn" value="Edit">Edit
                        <i class="material-icons right">send</i>
                      </button>                        
                </div>
            </form>
            </div>
        </div>
    </body>
</html>